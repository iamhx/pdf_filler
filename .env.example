# Server Configuration
PORT=3000
NODE_ENV=production

# File Storage
TEMP_FILE_DIR=src/temp
MAX_FILE_SIZE=10mb

# Security
URL_EXPIRY_HOURS=168  # 7 days - how long PDF URLs remain valid

# File Cleanup
CLEANUP_INTERVAL_HOURS=1         # How often to run cleanup (every hour)
MAX_TEMP_FILE_AGE_HOURS=168      # 7 days - how long to keep temp files

# Power Automate Endpoints
# Success Webhook (3rd Flow) - receives signed PDFs + callback URL from Node.js
POWER_AUTOMATE_SUCCESS_ENDPOINT=https://your-success-webhook-url

# Decline Webhook (4th Flow) - receives decline notification + callback URL from Node.js
POWER_AUTOMATE_DECLINE_ENDPOINT=https://your-decline-webhook-url
